{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "composer": {
    "enabled": true,
    "fileMatch": [
      "(^|/)([\\w-]*)composer\\.json$",
      "(^|/)([\\w-]*)composer\\.json.dist$"
      ],
      "versioning": "composer"
    }
}
